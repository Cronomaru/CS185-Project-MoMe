    <!-- By: May Camp -->

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ImMotivational" >
        
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button_randomperson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_intro"
            android:layout_centerHorizontal="true"
            android:text="@string/social_button_randomperson" />

        <TextView
            android:id="@+id/textView_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_randomperson"
            android:layout_below="@+id/textView_previousmotivators"
            android:text="ListView for &quot;Previous Motivators&quot; Goes Here, in scrolling thing?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_friendsavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_randomperson"
            android:layout_centerHorizontal="true"
            android:text="@string/social_friendsavailablecolon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView_usersname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_randomperson"
            android:layout_below="@+id/textView_friendsavailable"
            android:text="ListView for &quot;Friends Available&quot; goes here, in scrolling thing?"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_requestfromspecificfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_usersname"
            android:layout_centerHorizontal="true"
            android:text="@string/social_requestfromspecificfriendcolon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView_requestfromspecificfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_requestfromspecificfriend"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:hint="@string/social_autocomplete_friendsname" >

            <requestFocus />
        </AutoCompleteTextView>

        <Button
            android:id="@+id/button_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/autoCompleteTextView_requestfromspecificfriend"
            android:text="@string/social_button_request" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:src="@drawable/avatar_social_motivatee" />

        <TextView
            android:id="@+id/textView_previousmotivators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:text="@string/social_previousmotivatorscolon"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

    </RelativeLayout>
    </ScrollView>